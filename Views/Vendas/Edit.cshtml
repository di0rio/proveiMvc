@model proveiMvc.Models.Venda

@{
    ViewData["Title"] = "Editar Venda";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<style>
    .card {
        border-radius: 0.5rem;
    }

    .display-4 {
        font-size: 2.5rem;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">
            <i class="fas fa-shopping-cart me-3"></i>Editar Venda
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="DataEmissao" class="form-label">
                                <i class="fas fa-calendar me-2"></i>Data de Emissão
                            </label>
                            <input asp-for="DataEmissao" class="form-control" />
                            <span asp-validation-for="DataEmissao" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ValorTotal" class="form-label">
                                <i class="fas fa-money-bill-alt me-2"></i>Valor Total
                            </label>
                            <input asp-for="ValorTotal" class="form-control" />
                            <span asp-validation-for="ValorTotal" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ClienteId" class="form-label">
                                <i class="fas fa-user me-2"></i>Cliente
                            </label>
                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                       @*  <div class="form-group">
                            <label asp-for="Produto.Nome" class="form-label">
                                <i class="fas fa-box me-2"></i>Produto
                            </label>
                            <input asp-for="ProdutoId" class="form-control" />
                            <span asp-validation-for="ProdutoId" class="text-danger"></span>
                        </div> *@

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}