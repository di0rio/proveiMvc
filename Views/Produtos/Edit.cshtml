@model proveiMvc.Models.Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<style>
    .card {
        border-radius: 0.5rem;
    }

    .display-4 {
        font-size: 2.5rem;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #0d6efd;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">
            <i class="fas fa-box-open me-3"></i>Editar Produto
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Nome" class="form-label">
                                <i class="fas fa-box me-2"></i>Nome
                            </label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descricao" class="form-label">
                                <i class="fas fa-info-circle me-2"></i>Descrição
                            </label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Preco" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>Preço
                            </label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="QuantidadeEmEstoque" class="form-label">
                                <i class="fas fa-cubes me-2"></i>Quantidade em Estoque
                            </label>
                            <input asp-for="QuantidadeEmEstoque" class="form-control" />
                            <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FornecedorId" class="form-label">
                                <i class="fas fa-truck me-2"></i>Fornecedor
                            </label>
                            <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
                            <span asp-validation-for="FornecedorId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
