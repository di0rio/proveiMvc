@model proveiMvc.Models.VendaProduto
@{
    ViewData["Title"] = "Editar Venda Produto";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<style>
    .card {
        border-radius: 0.5rem;
    }

    .display-4 {
        font-size: 2.5rem;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .form-select {
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
        background-position: right 0.75rem center;
    }

        .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .btn {
        padding: 0.5rem 1.5rem;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .shadow-hover:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        transform: translateY(-2px);
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">
            <i class="fas fa-shopping-cart me-3"></i>Editar Venda Produto
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="VendaId" class="form-label">
                                        <i class="fas fa-receipt me-2"></i>Venda
                                    </label>
                                    <select asp-for="VendaId" class="form-select" asp-items="ViewBag.VendaId">
                                        <option value="">Selecione uma venda</option>
                                    </select>
                                    <span asp-validation-for="VendaId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ProdutoId" class="form-label">
                                        <i class="fas fa-tag me-2"></i>Produto
                                    </label>
                                    <select asp-for="ProdutoId" class="form-select" asp-items="ViewBag.ProdutoId">
                                        <option value="">Selecione um produto</option>
                                    </select>
                                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Quantidade" class="form-label">
                                        <i class="fas fa-box me-2"></i>Quantidade
                                    </label>
                                    <input asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade do produto" />
                                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary shadow-hover">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary shadow-hover">
                                <i class="fas fa-save me-2"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}