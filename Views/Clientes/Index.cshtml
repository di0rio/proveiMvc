@model IEnumerable<proveiMvc.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<style>
    .table th {
        font-weight: 600;
    }

    .btn-sm {
        padding: .25rem .5rem;
    }

    .badge {
        font-size: 0.875em;
    }

    .card {
        border-radius: 0.5rem;
    }

    .display-4 {
        font-size: 2.5rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">Clientes</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Novo Cliente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.CPF_CNPJ)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Endereco)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.StatusAtivo)</th>
                            <th scope="col" class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.CPF_CNPJ)</td>
                                <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    @if (item.StatusAtivo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inativo</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>